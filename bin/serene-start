#!/bin/bash

command_exists () {
    type "$1" > /dev/null 2>&1;
}

if ! command_exists java; then
   echo "ERROR: Requires java to be installed."
   exit 1
fi

pushd "$(dirname "$0")" > /dev/null
cd ..

FILENAME=jars/serene-0.1.0.jar

if [ -f $FILENAME ]; then
    exec java -Xmx16G -cp $FILENAME au.csiro.data61.core.Serene "$@"
else
    echo "ERROR: $FILENAME does not exist. Have you run bin/build yet?"
fi

popd > /dev/null


